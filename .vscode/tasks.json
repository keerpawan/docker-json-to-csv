{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-json-to-csv",
            "type": "shell",
            "command": "docker build -t convert:latest --target build --file ./Dockerfile.json2csv .",
            "group": "none"
        },
        {
            "label": "run-json-to-csv",
            "type": "shell",
            "command": "docker-compose up convert",
            "group": "none"
        },
        {
            "label": "build-file-to-test-map",
            "type": "shell",
            "command": "docker build -t mapper:latest --target build --file ./Dockerfile.file2testmap .",
            "group": "none"
        },
        {
            "label": "run-file-to-test-map",
            "type": "shell",
            "command": "$env:REPO_PATH='venasolutions/mt-server'; $env:START_PAGE='5'; $env:LAST_PR='PR'; $env:FILE_PATH='PR-yyyy-mm-dd'; docker-compose up mapper",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "build-analyse-map",
            "type": "shell",
            "command": "docker build -t analysemap:latest --target build --file ./Dockerfile.analysemap .",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "run-analyse-map",
            "type": "shell",
            "command": "$env:FILE_PATH='../data/16498-2023-12-21'; docker-compose up analysemap",
            "group": "none",
            "problemMatcher": []
        }
    ]
}
